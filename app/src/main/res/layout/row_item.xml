<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/inviteLayout"
        android:layout_toStartOf="@+id/inviteLayout"
        android:paddingLeft="10dp"
        android:id="@+id/infoLayout">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="555-522-8243"
            android:id="@+id/numberText"
            android:layout_below="@+id/textView1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/favLayout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/backLayout"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp">

        <ToggleButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/favBtn"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/star_tb"
            android:button="@android:color/transparent"
            android:checked="false"
            android:enabled="false"
            android:clickable="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/inviteLayout"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:visibility="visible">

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/inviteBtn"
            android:background="#fff"
            android:src="@drawable/v_table_plus"
            android:scaleType="fitXY"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>
