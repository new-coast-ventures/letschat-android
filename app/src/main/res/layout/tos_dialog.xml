<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/transparent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let&apos;s Chat"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By submitting your phone number, you agree to our privacy policy and terms of service"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:shadowColor="#000"
        android:gravity="center_horizontal"
        android:textColor="#000"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Privacy Policy"
        android:id="@+id/privacyBtn"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tos_btn"
        android:textColor="#4A90E2"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Terms of Service"
        android:id="@+id/tosBtn"
        android:layout_below="@+id/privacyBtn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tos_btn"
        android:textColor="#4A90E2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I Agree"
        android:id="@+id/agreeBtn"
        android:layout_below="@+id/tosBtn"
        android:layout_centerHorizontal="true"
        android:textColor="#4A90E2"
        android:textStyle="bold"
        android:background="@drawable/tos_btn" />
    </RelativeLayout>
</RelativeLayout>